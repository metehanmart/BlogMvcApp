@model IEnumerable<BlogMvcApp.Models.Category>

<style>
    .categoryList:hover {color:red;}
    .categoryList color {color:blue;}
    .categoryList{
        text-decoration: none;
    }
</style>
<div class="well">
    <h4>Blog Kategorileri</h4>
    <div class="row">
        @foreach(var item in Model)
         {
            <div class="col-lg-6">
                <u1 class="list-unstyled">
                    <li>
                        <a class="categoryList" href="/Blog/List/@item.Id">@item.KategoriAdi</a>
                    </li>
                </u1>
            </div>
         }
        
        
    </div>
</div>