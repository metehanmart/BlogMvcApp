@model BlogMvcApp.Models.Blog

@{
    ViewBag.Title = "Edit";
}

<h2>Blog Güncelle</h2>
<hr />
<style>
    .listeyeGeri {
        text-decoration: none;
    }

    .listeyeGeri:hover {
        color: orangered;
    }  
    
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container body-content bg-light">
        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @Html.LabelFor(model => model.Baslik, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Baslik, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Baslik, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Aciklama, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Aciklama, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Aciklama, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Resim, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Resim, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Resim, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Icerik, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Icerik, new { @class = "form-control"})
                    @Html.ValidationMessageFor(model => model.Icerik, "", new { @class = "text-danger" })
                </div>
            </div>



            <div class="form-group">
                @Html.LabelFor(model => model.Onay, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.Onay, new { htmlAttributes = new { @class = "atalay" } })
                        @Html.ValidationMessageFor(model => model.Onay, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Anasayfa, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox" >
                        @Html.EditorFor(model => model.Anasayfa,new { @class = "color:green" })
                        @Html.ValidationMessageFor(model => model.Anasayfa, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CategoryId, "CategoryId", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("CategoryId", null, "Kategori Seçiniz", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-success" style="margin-top:15px" onclick="@("window.location.href='" + @Url.Action("List", "Admin") + "'");" />
                </div>
            </div>
        </div>
    </div>

}


<div style="margin-top:15px">
    @Html.ActionLink("Back to List", "List",null,new {@class="listeyeGeri"})
</div>

<script src="~/Scripts/jquery-3.6.0.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
