@model IEnumerable<BlogMvcApp.Models.BlogModel>
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.10.2/css/all.css">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.10.2/css/v4-shims.css">

@if (Model.Count() == 0)
{
    <div class="alert alert-warning">Kayıt Bulunamadı</div>
}
else
{
    foreach (var blog in Model)
    {
        <div class="blog">

            <h3 class="page-header">
                @blog.Baslik
            </h3>
            <p>
                <i class="fas fa-calendar-day">  @blog.EklenmeTarihi</i>
            </p>

            <hr />
            <img class="img-thumbnail" src="https://www.wine4food.com/wp-content/uploads/2016/07/full-width-placeholder-900x300.png" alt="">
            <hr />
            <p>
                @blog.Aciklama
            </p>
            @Html.ActionLink("Daha Fazla...", "Details", "Blog", new { id = blog.Id }, new { @class = "btn btn-primary", style="margin-bottom:10px" })
        </div>
    }

}
